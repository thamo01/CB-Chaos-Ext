{
    "name": "CB Chaos Extension",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "Chrome Extension to work with CB Kosmos. Enables Kosmos to get tip, message, user data and much more.",
    "homepage_url": "https://github.com/thamo01/CB-Chaos-Ext",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "browser_action": {
        "default_title": "CB Chaos Ext",
        "default_popup": "popup.html"
    },
    "default_locale": "en",
    "background": {
        "scripts": [
            "js/background.js"
        ],
        "persistent": true
    },
    "permissions": [
        "https://*.chaturbate.*",
        "http://*.chaturbate.*"
    ],
    "content_security_policy": "default-src 'self';",
    "content_scripts": [{
        "matches": [
            "https://*.chaturbate.*",
            "http://*.chaturbate.*"
        ],
        "js": [
            "js/content.js"
        ]
    }]
}